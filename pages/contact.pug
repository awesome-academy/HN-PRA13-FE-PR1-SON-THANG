extends layout.pug
include mixins.pug
block content  
    .container
        +breadcrumbs(["Home", "Liên hệ"])
    section#contact
        .container 
            h2.text-uppercase Liên hệ
            .row 
                .col.col-6 
                    .contact-google-map   
                        img.w-100(src="../assets/images/google-map.jpg" alt="google-map.jpg")         
                .col.col-6 
                    h3.text-uppercase Gửi email cho chúng tôi
                    form
                        .row.mb-3
                            label.col-sm-2.col-form-label Tên*
                            .col-sm-10
                                input.form-control(type='text')
                        .row.mb-3
                            label.col-sm-2.col-form-label Email*
                            .col-sm-10
                                input.form-control(type='email')                             
                        .row.mb-3
                            label.col-sm-2.col-form-label Ý kiến*
                            .col-sm-10
                                textarea.form-control( style='height: 100px')   
                        .mb-3.text-end
                            button.btn.btn-dark.text-uppercase(type='button') Gửi